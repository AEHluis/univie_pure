# Elsevier Pure API Configuration
# Copy this file to .env and configure your API credentials

# =============================================================================
# API Version Selection
# =============================================================================
# Choose which API version to use: 'xml' (legacy) or 'openapi' (new REST API)
# Default: xml
PURE_API_VERSION=xml

# =============================================================================
# XML API Configuration (Legacy - currently default)
# =============================================================================
# Base URI for Pure XML/SOAP API
PURE_URI=https://www.yourDOMAIN.de/ws/

# API Key for authentication
PURE_APIKEY=ADD-YOUR-API-KEY

# API endpoint version
PURE_ENDPOINT=api/524/

# Proxy server (optional, leave empty if not needed)
PURE_PROXY=

# =============================================================================
# OpenAPI Configuration (New REST API)
# =============================================================================
# Base URL for Pure OpenAPI (without trailing slash)
# Example: https://api.elsevierpure.com/v1
PURE_OPENAPI_URL=https://api.elsevierpure.com/v1

# Authentication Method 1: Simple API Key / Bearer Token
# If your OpenAPI uses simple Bearer token authentication, set this:
PURE_OPENAPI_KEY=
# OR
PURE_BEARER_TOKEN=

# Authentication Method 2: OAuth 2.0 Client Credentials
# If your OpenAPI uses OAuth 2.0, configure these:
PURE_OAUTH_CLIENT_ID=
PURE_OAUTH_CLIENT_SECRET=

# Optional: Custom OAuth token endpoint
# Default: {PURE_OPENAPI_URL}/oauth/token
PURE_OAUTH_TOKEN_ENDPOINT=

# =============================================================================
# Advanced Settings
# =============================================================================
# API request timeout in seconds (default: 30)
PURE_API_TIMEOUT=30

# Maximum retry attempts for failed requests (default: 3)
PURE_API_RETRY_ATTEMPTS=3

# Cache lifetime in seconds (default: 14400 = 4 hours)
PURE_CACHE_LIFETIME=14400

# =============================================================================
# Migration Settings
# =============================================================================
# Enable parallel API calls for testing (compares XML vs OpenAPI responses)
# WARNING: This will make double API calls and should only be used for testing!
PURE_ENABLE_PARALLEL_TESTING=false

# Log level for API service (debug, info, warning, error)
PURE_API_LOG_LEVEL=info

# =============================================================================
# Feature Flags
# =============================================================================
# Enable individual endpoints for OpenAPI (when PURE_API_VERSION=openapi)
# Use this for gradual migration of specific endpoints
# Values: true or false

# Enable OpenAPI for persons endpoint
PURE_OPENAPI_ENABLE_PERSONS=true

# Enable OpenAPI for research outputs endpoint
PURE_OPENAPI_ENABLE_RESEARCH_OUTPUTS=true

# Enable OpenAPI for projects endpoint
PURE_OPENAPI_ENABLE_PROJECTS=true

# Enable OpenAPI for organisational units endpoint
PURE_OPENAPI_ENABLE_ORGANISATIONS=true

# Enable OpenAPI for data sets endpoint
PURE_OPENAPI_ENABLE_DATASETS=true

# Enable OpenAPI for equipments endpoint
PURE_OPENAPI_ENABLE_EQUIPMENTS=true
